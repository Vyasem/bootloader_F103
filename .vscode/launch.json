{
	"configurations": [
		{
			"name": "Desktop",
			"type": "cppdbg",
			"request": "launch",
			"program": "${command:cmake.launchTargetPath}",
			"args": [],
			"stopAtEntry": true,
			"cwd": "${command:cmake.launchTargetDirectory}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "MCU",
			"type": "cortex-debug",
			"request": "launch",
			"cwd": "${command:cmake.launchTargetDirectory}",
			"executable": "${command:cmake.launchTargetPath}",
			"servertype": "stlink",
			"device": "STM32F103C8",
			"interface": "swd",
			"serialNumber": "", //If you have more than one J-Link probe, add the serial number here.
			"runToEntryPoint": "main",
			//"svdFile": "${workspaceFolder}/build/targets/stm32l431/cmsis-svd-src/stm32l4/STM32L4x1.svd",
			"breakAfterReset": true,
			//"serverArgs": ["-gui"],
			"preLaunchTask": "Build the active target",
			"liveWatch": {
				"enabled": true,
				"samplesPerSecond": 4
			},
			"preLaunchCommands": [
				"load ./../bootloader/bootloader.srec",
				"load ./${command:cmake.getLaunchTargetFilename}_checksum.srec",
				"enable breakpoint",
				"monitor reset"
			]
		},
		{
			"name": "MCU JLink",
			"type": "cortex-debug",
			"request": "launch",
			"cwd": "${command:cmake.launchTargetDirectory}",
			"executable": "${command:cmake.launchTargetPath}",
			"servertype": "jlink",
			"device": "STM32F103C8",
			"interface": "swd",
			"showDevDebugOutput": "raw",
			"serialNumber": "", //If you have more than one J-Link probe, add the serial number here.
			"runToEntryPoint": "main",
			//"svdFile": "${workspaceFolder}/targets/stm32f427zgt6/STM32F427.svd",
			"breakAfterReset": true,
			"serverArgs": ["-gui"],
			"preLaunchTask": "Build the active target",
			"preLaunchCommands": [
				"load ./../bootloader/bootloader.srec",
				"load ./${command:cmake.getLaunchTargetFilename}_checksum.srec",
				"enable breakpoint",
				"monitor reset"
			]
		}
	],
	"version": "2.0.0"
}